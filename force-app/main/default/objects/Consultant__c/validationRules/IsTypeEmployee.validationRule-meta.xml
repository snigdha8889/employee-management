<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>IsTypeEmployee</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL( Type__c , &#39;Employee&#39;),ISBLANK( Phone__c ))</errorConditionFormula>
    <errorMessage>Phone number is mandatory for employees.</errorMessage>
</ValidationRule>
